generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  USER
}

enum Gender {
  F
  M
  O
}

model User {
  id            Int       @id @default(autoincrement())
  username      String
  email         String    @unique
  role          Role      @default(USER)
  gender        Gender?
  bio           String?
  password      String
  posts         Post[]
  comments      Comment[]
  profilPicture String?
}

model Post {
  id        Int       @id @default(autoincrement())
  title     String
  content   String
  authorId  Int       @map("autorId")
  author    User      @relation(fields: [authorId], references: [id])
  comment   Comment[]
  createdAt DateTime  @default(now())
  image     String?
}

model Comment {
  id        Int      @id @default(autoincrement())
  content   String
  authorId  Int
  author    User     @relation(fields: [authorId], references: [id])
  postId    Int
  post      Post     @relation(fields: [postId], references: [id])
  createdAt DateTime @default(now())
}
